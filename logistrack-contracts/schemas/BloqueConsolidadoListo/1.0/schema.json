{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://contracts.logistrack/schemas/BloqueConsolidadoListo/1.0/schema.json",
  "title": "BloqueConsolidadoListo v1.0 (data)",
  "type": "object",
  "required": ["bloque_id", "fecha_despacho", "chofer", "ordenes"],
  "properties": {
    "bloque_id": { "type": "string", "minLength": 1 },
    "fecha_despacho": { "type": "string", "format": "date-time" },
    "chofer": {
      "type": "object",
      "required": ["id", "nombre"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "nombre": { "type": "string", "minLength": 1 }
      },
      "additionalProperties": false
    },
    "ordenes": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/Orden" }
    }
  },
  "additionalProperties": false,
  "$defs": {
    "Producto": {
      "type": "object",
      "required": ["sku", "qty", "peso", "volumen"],
      "properties": {
        "sku": { "type": "string", "minLength": 1 },
        "qty": { "type": "integer", "minimum": 1 },
        "peso": { "type": "number", "minimum": 0 },
        "volumen": { "type": "number", "minimum": 0 }
      },
      "additionalProperties": false
    },
    "Orden": {
      "type": "object",
      "required": ["id", "pyme_id", "origen_cd_id", "destino_cd_id", "productos"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "pyme_id": { "type": "string", "minLength": 1 },
        "origen_cd_id": { "type": "string", "minLength": 1 },
        "destino_cd_id": { "type": "string", "minLength": 1 },
        "peso_total": { "type": "number", "minimum": 0 },
        "volumen_total": { "type": "number", "minimum": 0 },
        "productos": {
          "type": "array",
          "minItems": 1,
          "items": { "$ref": "#/$defs/Producto" }
        }
      },
      "additionalProperties": false
    }
  }
}
